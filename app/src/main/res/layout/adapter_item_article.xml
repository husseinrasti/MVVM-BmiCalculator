<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/img_dimen_lg"
    android:layout_height="@dimen/img_dimen_lg"
    android:layout_margin="2dp"
    android:background="@drawable/text_block">

    <ImageView
        android:id="@+id/imgAdapterItemArt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/img_dimen_md"
        android:contentDescription="@string/image_desc"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/backgrounds/scenic[9]"/>

    <TextView
        android:id="@+id/txtAdapterItemArtTitle"
        android:layout_width="@dimen/img_dimen_md"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:maxLines="1"
        android:text="@string/str_bmi"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgAdapterItemArt"/>

</androidx.constraintlayout.widget.ConstraintLayout>